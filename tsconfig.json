{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "typeRoots": ["./node_modules/@types","./types"],
    "types": ["node"]
  },
  "include": [
    "src/**/*"
  ]
}